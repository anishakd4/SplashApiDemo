<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Myapp.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#FFFFFF</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">5000</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.SplashApiDemo</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/ic_launcher_foreground</item>
    </style>
</resources>